<ul class={{this.styleNamespace}}>
  {{#if @movies}}
    {{#each @movies as |movie|}}
      {{! using @ for load movies since passed from parent }}
      <MovieList::MovieListItem @movie={{movie}} @loadMovies={{@loadMovies}} />

      <hr />
    {{/each}}
  {{else}}
    <h2>Oops! There are currently no movies. Please add one.</h2>
  {{/if}}
</ul>