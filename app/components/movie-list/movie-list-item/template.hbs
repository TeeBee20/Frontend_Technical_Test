<li class={{this.styleNamespace}}>
  <div class='details'>
    {{#if this.isEditing}}
      <form {{on 'submit' this.submitMovieEdit}}>
        <label>
          Title
          <Input @type='text' @value={{this.newTitle}} placeholder='Title..' />
        </label>

        <label>
          Description
          <Input
            @type='text'
            @value={{this.newDescription}}
            placeholder='Description..'
          />
        </label>

        <label>
          Rating
          <Input
            @type='text'
            @value={{this.newRating}}
            placeholder='Rating..'
          />
        </label>

        <button
          type='button'
          {{on 'click' this.toggleIsEditing}}
        >Cancel</button>
        <button type='submit'>Save</button>
      </form>
    {{else}}
      <h2>
        {{this.movie.title}}
      </h2>

      <p>
        {{this.movie.description}}
      </p>

      {{#if this.movie.rating}}
        <p>â˜…: {{this.movie.rating}}</p>
      {{/if}}

      <button type='button' {{on 'click' this.toggleIsEditing}}>Edit</button>
      <button type='button' {{on 'click' this.deleteMovie}}>Delete</button>
    {{/if}}
  </div>
</li>